#!/bin/bash

# Use data.json as the source file
file="data.json"

# Extract and format data using jq, sed, and awk
name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
type=$(jq -r '.types[0].type.name' "$file" | sed 's/.*/\u&/')
weight=$(jq -r '.weight' "$file" | awk '{printf "%.1f", $1 / 10}')
height=$(jq -r '.height' "$file" | awk '{printf "%.1f", $1 / 10}')

# Output the formatted sentence
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."
